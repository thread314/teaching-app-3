<h1>Next question</h1>
<p><%= @user.name %></p>
<% @questionarray.each do |element| %>
	<p> 
	<% if classifyelement(element) == "answer-text" %>
		<%= form_tag("/cardstates/#{@nextcard.id}", method: "PATCH") do %>
   	<%= text_field_tag(:answer) %>
    <%= submit_tag("Submit Answer") %>
  <% end %>

	<% elsif classifyelement(element) == "plaintext" %> 
		<%= element %>
	<% end %>
	</p>
<% end %>
<p> <%= @nextcard.id %> </p>
<%= console %>
